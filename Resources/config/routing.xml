<?xml version="1.0" encoding="UTF-8" ?>

<routes xmlns="http://symfony.com/schema/routing"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/routing http://symfony.com/schema/routing/routing-1.0.xsd">
    
    <route id="neutron_contact_form.backend.contact_form" pattern="/admin/widget/contact-form">
        <default key="_controller">neutron_contact_form.controller.backend.contact_form:indexAction</default>
        <requirement key="_method">GET|POST</requirement>
    </route>
    
    <route id="neutron_contact_form.backend.contact_form.update" pattern="/admin/widget/contact-form/update/{id}">
        <default key="_controller">neutron_contact_form.controller.backend.contact_form:updateAction</default>
        <default key="id">0</default>
        <requirement key="_method">GET|POST</requirement>
    </route>
    
    <route id="neutron_contact_form.backend.contact_form.delete" pattern="/admin/widget/contact-form/delete/{id}">
        <default key="_controller">neutron_contact_form.controller.backend.contact_form:deleteAction</default>
        <requirement key="_method">GET|POST</requirement>
    </route>
    
    <route id="neutron_contact_form.frontend.contact_form.handle" pattern="/widget/neutron-contact-form/handle/{id}">
        <default key="_controller">neutron_contact_form.controller.frontend.contact_form:handleAction</default>
        <requirement key="_method">POST</requirement>
    </route>

</routes>
